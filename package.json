{
    "name": "apolo",
    "version": "0.0.0",
    "type": "module",
    "description": "Styles and components for Vue 3 + Typescript projects.",
    "files": [
        "dist"
    ],
    "main": "./dist/apolo.umd.cjs",
    "module": "./dist/apolo.js",
    "exports": {
        ".": {
            "import": "./dist/apolo.js",
            "require": "./dist/apolo.umd.cjs",
            "types": "./dist/index.d.ts"
        },
        "./style.css": "./dist/style.css",
        "./index.scss": "./dist/index.scss"
    },
    "types": "./dist/index.d.ts",
    "scripts": {
        "demo": "vite ./demo",
        "build": "run-p type-check build-only",
        "build-only": "vite build && vue-tsc --emitDeclarationOnly",
        "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
        "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
        "format": "prettier --write src/"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/alvidir/apolo.git"
    },
    "license": "MIT",
    "dependencies": {
        "vue": "^3.3.4",
        "vue-spinner": "^1.0.4"
    },
    "devDependencies": {
        "@babel/types": "^7.22.17",
        "@rushstack/eslint-patch": "^1.3.2",
        "@tsconfig/node18": "^18.2.0",
        "@types/node": "^18.17.5",
        "@vitejs/plugin-vue": "^4.3.1",
        "@vue/eslint-config-prettier": "^8.0.0",
        "@vue/eslint-config-typescript": "^11.0.3",
        "@vue/tsconfig": "^0.4.0",
        "eslint": "^8.46.0",
        "eslint-plugin-vue": "^9.16.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.0.0",
        "sass": "^1.32.7",
        "sass-loader": "^13.2.0",
        "typescript": "^5.1.6",
        "vite": "^4.4.9",
        "vite-plugin-dts": "^3.5.3",
        "vue-tsc": "^1.8.8"
    }
}
